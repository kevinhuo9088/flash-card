<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/list_view_padding"
    android:paddingBottom="@dimen/list_view_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/option_text"
        android:textSize="@dimen/text_size_small_header"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/option_image"
        android:layout_toEndOf="@+id/option_image"
        android:layout_marginTop="@dimen/image_top_margin2"
        android:layout_marginLeft="@dimen/image_left_margin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option_image"
        android:layout_alignBottom="@+id/option_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"/>
</RelativeLayout>